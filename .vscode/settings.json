{
  "yaml.schemas": {
    "./.config/schema.json": "example-bug.yaml",
    "./schema-at-root.json": "example-works-root.yaml"
  },
  "json.schemas": [
    {
      "fileMatch": ["example-*.json"],
      "url": "./.config/schema.json"
    },
    {
      "fileMatch": ["example-*-root.json"],
      "url": "./schema-at-root.json"
    }
  ]
}
